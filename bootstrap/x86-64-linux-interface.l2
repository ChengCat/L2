(function sys-clock-gettime (l r p) (use-memo $p (` &228 $r)))
(function o-rdonly (l r p) (use-memo $p (` &0 $r)))
(function o-rdwr (l r p) (use-memo $p (` &2 $r)))
(function o-creat (l r p) (use-memo $p (` &64 $r)))
